<div class="shadow rounded p-5">
  <%= form_with(model: post, data: { controller: "ocr" }) do |form| %>
    <% if post.errors.any? %>
      <div style="color: red">
        <h2><%= pluralize(post.errors.count, "error") %> prohibited this post from being saved:</h2>
        <ul>
          <% post.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    <div>
      <%= form.label :title, class: 'form-label' %>
      <%= form.text_field :title, class: 'form-control' %>
    </div>
    <div>
      <%= form.label :body, class: 'form-label' %>
      <%= form.text_area :body, class: 'form-control' %>
    </div>
    <div class="col-3 my-3">
      <%= form.label :image, class: 'form-label' %>
      <%= form.file_field :image, data: {  ocr_target: "file", action: "change->ocr#upload" }, class: 'form-control' %>
    </div>
    <%# Hidden input for the image description %>
    <%#= form.hidden_field :image_description, data: { ocr_target: "image_description" } %>
    <div>
      <%= form.label :image_description, class: 'form-label' %>
      <%= form.text_area :image_description, data: { ocr_target: "image_description" }, class: 'form-control', rows: 5 %>
    </div>
    <div class="my-4">
      <%= form.submit class: 'btn btn-outline-success btn-sm' %>
    </div>
  <% end %>
</div>
